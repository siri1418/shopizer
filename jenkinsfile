pipeline {
    agent { label 'jenkins' }
   triggers { pollSCM('* * * * *') }
    stages {
        stage ('vcs') {
            steps {
                git branch: 'develop',url: 'https://github.com/siri1418/shopizer.git'
            }
        }
        stage ('build') {
        steps {
            sh 'mvn package'  
        }
    }
    stage ('test results formatted') {
        steps {
            junit '**/surefire-reports/*.xml'
        } 
            }

    }

}
